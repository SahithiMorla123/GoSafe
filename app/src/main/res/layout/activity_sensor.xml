<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="24dp"
    android:background="#1C1C1E"
    tools:context=".SensorActivity">

    <TextView
        style="@style/TitleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Shake &amp; Sensor"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Live Accelerometer Data"
        android:textColor="@color/disabled_gray"
        android:textSize="16sp"
        android:layout_marginBottom="8dp"/>

    <TextView
        android:id="@+id/tvAccelValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0.00 G"
        android:textColor="@color/white"
        android:textSize="40sp"
        android:textStyle="bold"/>

    <com.example.gosafe.SensorGraphView
        android:id="@+id/sensorGraph"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginTop="24dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Shake device firmly to send an SOS"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:layout_marginTop="24dp"
        android:textAlignment="center"/>
</LinearLayout>