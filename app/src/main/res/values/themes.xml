<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.GoSafe" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primaryBlue</item>
        <item name="colorPrimaryVariant">@color/darkBlue</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/darkBlue</item>
    </style>

    <!-- Style for Main Titles on each screen -->
    <style name="TitleText">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">26sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Style for Main Action Buttons -->
    <style name="AppButton.Main" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/button_background_main</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:paddingVertical">14dp</item>
        <item name="android:textAllCaps">false</item> <!-- For more modern-looking text -->
    </style>

    <!-- Style for Secondary Action Buttons -->
    <style name="AppButton.Secondary" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/button_background_secondary</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textAllCaps">false</item>
    </style>
</resources>